#+begin_src plantuml :file uml.png
@startuml
start
:Generate guess word;
:Generate as many blanks as letters in the word;
while ()
    :Ask for letter;
    if (Letter is right) then (yes)
        :Replace blanks with letter;
        if (No more blanks) then (yes)
            break
        else(no)
        endif
    else (no)
        :Lose a life;
        if (Lifes left?) then (no)
            break
        else (yes)
        endif
    endif
endwhile
:Game Over;
stop
@enduml
#+end_src

#+results:
